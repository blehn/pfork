/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
/ [if gt IE 8]><!
%html.no-js
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    
    %title hearts
    %meta{:content => "desc", :name => "description"}
    %meta{:content => "width=device-width", :name => "viewport"}
    
    
    %link{ :rel => "stylesheet", :href => "css/stylesheet.css"}

  %body
    %ul#albums
      = @albums.each do |album|
        %li
          %a{ :href => "http://grooveshark.com/#!/search?q=" + album.css('.info h1').text.strip + "+" + album.css('.info h2').text.strip }
            / .cover
            /  %img{ :src => album.css('.artwork img').attr('src')}
            .album
              %span.artist
                = album.css('.info h1').text.strip
              %span.title
                = album.css('.info h2').text.strip
          %ul.links     
            %li
              %a.torrent magnet
            %li
              %a.spotify spotify
            %li
              %a.rdio rdio
            %li
              %a.itunes itunes
            %li
              %a.amazon amazon
            %li
              %a.play play
            / %span.score
            /   = album.css('.info span.score').text.strip
            / .date
            /   = album.css('.info h4 span.pub-date').text.strip



    %script{ :src => "//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" }

    

